<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#DBE6E0"
    android:layout_height="match_parent"
    tools:context=".BidsOrder.BidAcitivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/header"

        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#800000"
        app:title="Post Bid"
        app:titleTextColor="#ffffff"

        android:theme="@style/Theme.AppCompat" >
        <Button
            android:background="@mipmap/hometwo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/home"
            android:layout_margin="5dp"
            android:layout_gravity="right"
            />
        <Button
            android:background="@mipmap/refresh"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:id="@+id/refresh"
            android:layout_gravity="right"
            />

    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_below="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/card"
        android:background="@drawable/white"
        android:layout_below="@+id/header"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"

        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/user"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:id="@+id/d"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:text="Submit Bid"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/id"
            android:layout_below="@+id/user"
            android:layout_height="wrap_content">

            <TextView

                android:layout_width="wrap_content"
                android:id="@+id/d"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:text="Description:"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_width="match_parent"
                android:id="@+id/descriptiontext"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="140dp"
                android:textColor="#000000"


                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/id"
            android:layout_below="@+id/user"
            android:layout_height="wrap_content">

            <TextView

                android:layout_width="wrap_content"
                android:id="@+id/d"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:text="Budget:"
                android:layout_height="wrap_content" />
            <EditText
android:inputType="number"
                android:layout_width="match_parent"
                android:id="@+id/budgettext"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="110dp"
                android:textColor="#000000"


                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/id"
            android:layout_below="@+id/user"
            android:layout_height="wrap_content">

            <TextView

                android:layout_width="wrap_content"
                android:id="@+id/d"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:text="Room Type:"
                android:layout_height="wrap_content" />
            <EditText

                android:layout_width="match_parent"
                android:id="@+id/roomtypetext"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="140dp"
                android:textColor="#000000"


                android:layout_height="wrap_content" />
        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/id"
            android:layout_below="@+id/user"
            android:layout_height="wrap_content">

            <TextView

                android:layout_width="wrap_content"
                android:id="@+id/d"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:text="Country:"
                android:layout_height="wrap_content" />
            <Spinner
                android:id="@+id/statetext"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="20dp"
                style="@android:style/Widget.Holo.DropDownItem.Spinner"
                android:background="@drawable/extra"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/d"



                android:spinnerMode="dropdown" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/id"
            android:layout_below="@+id/user"
            android:layout_height="wrap_content">

            <TextView

                android:layout_width="wrap_content"
                android:id="@+id/d"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:text="City:"
                android:layout_height="wrap_content" />
            <Spinner
                android:id="@+id/citytext"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="20dp"
                style="@android:style/Widget.Holo.DropDownItem.Spinner"
                android:background="@drawable/extra"
                android:gravity="center"
                android:layout_toRightOf="@+id/d"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"



                android:spinnerMode="dropdown" />
        </RelativeLayout>

        <Button
            android:id="@+id/insert"
            android:layout_margin="10dp"
            android:background="@drawable/extra"
            android:text="Bid"
            android:layout_gravity="center_horizontal"
            android:layout_width="150dp"
            android:layout_height="40dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp" />
    </LinearLayout></ScrollView>
    <ProgressBar
        android:layout_width="wrap_content"
        android:id="@+id/progress"
       android:layout_centerVertical="true"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"

        android:layout_height="wrap_content" />
</RelativeLayout>