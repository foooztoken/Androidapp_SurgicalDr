<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#DBE6E0"
    android:layout_height="match_parent"
  >
    <android.support.v7.widget.Toolbar
        android:id="@+id/header"

        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#800000"
        app:title="Bid Details"
        app:titleTextColor="#ffffff"

        android:theme="@style/Theme.AppCompat" >

        <Button
            android:background="@mipmap/hometwo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/home"
            android:layout_gravity="right"
            />

    </android.support.v7.widget.Toolbar>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/progress"
        android:layout_height="wrap_content" />
    <ScrollView
        android:layout_below="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
      <RelativeLayout

          android:layout_width="match_parent"
          android:layout_height="match_parent">
            <LinearLayout
                android:background="@drawable/white"
                android:layout_margin="30dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/budget"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:text="sss"
                    android:textColor="#000000"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/description"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:text="sss"
                    android:textColor="#000000"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/state"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:textSize="20dp"    android:text="sss"
                    android:textColor="#000000"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/city"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:text="sss"
                    android:textColor="#000000"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/roomtype"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:text="sss"
                    android:textColor="#000000"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/bloodtransfer"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:text="sss"
                    android:textColor="#000000"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/icuinclude"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:text="sss"
                    android:textColor="#000000"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/nodays"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:text="sss"
                    android:textColor="#000000"
                    android:layout_height="wrap_content" />
                <Button

                    android:id="@+id/recommendation"
                    android:layout_margin="10dp"
                    android:layout_gravity="center_horizontal"
android:visibility="gone"
                    android:background="@drawable/extra"
                    android:text="Recommendation"
                    android:textColor="#ffffff"
                    android:layout_width="150dp"
                    android:layout_height="40dp" />
                <Button

                    android:id="@+id/conversation"
                    android:layout_margin="10dp"
                    android:layout_gravity="center_horizontal"
                    android:visibility="gone"
                    android:background="@drawable/extra"
                    android:text="Conversation"
                    android:textColor="#ffffff"
                    android:layout_width="150dp"
                    android:layout_height="40dp" />
                <Button
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:id="@+id/profile"
                    android:layout_margin="10dp"
                    android:layout_gravity="center_horizontal"

                    android:background="@drawable/extra"
                    android:text="View_profile"
                    android:textColor="#ffffff"
 />

                <Button

                    android:id="@+id/accept"
                    android:layout_margin="10dp"
                    android:layout_gravity="center_horizontal"

                    android:background="@drawable/extra"
                    android:text="Accept"
                    android:textColor="#ffffff"
                    android:layout_width="150dp"
                    android:layout_height="40dp" />
            </LinearLayout>

      </RelativeLayout></ScrollView>
    </RelativeLayout>
