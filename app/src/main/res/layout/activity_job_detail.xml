<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#DBE6E0"
    android:layout_height="match_parent"
    tools:context=".JobDetail">
    <android.support.v7.widget.Toolbar
        android:id="@+id/header"

        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#800000"
        app:title="Job Detail"
        app:titleTextColor="#ffffff"

        android:theme="@style/Theme.AppCompat" >
        <Button
            android:background="@mipmap/hometwo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/home"
            android:layout_gravity="right"
            />

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:id="@+id/aj"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:layout_marginTop="0dp">

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="20dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header"
            android:orientation="vertical">
<RelativeLayout
    android:background="@drawable/white"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/n"
                    android:layout_width="wrap_content"


                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:text="Name:"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/name"


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="12dp"
                    android:text="jobname"
                    android:textColor="#000000"
                    android:textSize="20dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/n"
                    android:layout_width="wrap_content"


                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:text="Description:"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="130dp"
                    android:layout_marginTop="12dp"
                    android:text="jobname"
                    android:textColor="#000000"
                    android:textSize="20dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/n"
                    android:layout_width="wrap_content"


                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:text="Budget:"

                    android:textColor="#FF0000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/providertype"


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="12dp"
                    android:text="jobname"
                    android:textColor="#FF0000"
                    android:textSize="20dp"/>


            </RelativeLayout>
            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/n"
                    android:layout_width="wrap_content"


                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:text="City:"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/city"


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="12dp"
                    android:text="jobname"
                    android:textColor="#000000"
                    android:textSize="20dp" />
            </RelativeLayout>
            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/n"
                    android:layout_width="wrap_content"


                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:text="State:"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView

                    android:id="@+id/jobtype"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="12dp"
                    android:textColor="#000000"
                    android:textSize="20dp" />

            </RelativeLayout>
            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/n"
                    android:layout_width="wrap_content"


                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:text="Blood Type:"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView

                    android:id="@+id/bloodgroup"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="130dp"
                    android:layout_marginTop="12dp"
                    android:textColor="#000000"
                    android:textSize="20dp" />

            </RelativeLayout>
        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/n"
                android:layout_width="wrap_content"


                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="Room Type:"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/roomtype"
                android:text="Not Specified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="12dp"
                android:textColor="#000000"
                android:textSize="20dp"/>

        </RelativeLayout>


            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/n"
                    android:layout_width="wrap_content"


                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:text="Age:"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView

                    android:id="@+id/age"
                    android:text="Not Specified"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="12dp"
                    android:textColor="#000000"
                    android:textSize="20dp" />

            </RelativeLayout>
            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/n"
                    android:layout_width="wrap_content"


                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:text="MedicationTaken:"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView

                    android:id="@+id/medicationtaken"
                    android:text="Not Specified"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="190dp"
                    android:layout_marginTop="12dp"
                    android:textColor="#000000"
                    android:textSize="20dp" />

            </RelativeLayout>
            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/n"
                    android:layout_width="wrap_content"


                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:text="ChronicDisease:"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView

                    android:id="@+id/chronicdisease"
                    android:text="Not Specified"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="170dp"
                    android:layout_marginTop="12dp"
                    android:textColor="#000000"
                    android:textSize="20dp" />

            </RelativeLayout>
            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/n"
                    android:layout_width="wrap_content"


                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:text="History:"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView

                    android:id="@+id/history"
                    android:text="Not Specified"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="12dp"
                    android:textColor="#000000"
                    android:textSize="20dp" />

            </RelativeLayout>
            <RelativeLayout
android:id="@+id/attachment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/n"
                    android:layout_width="wrap_content"


                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:text="AttachmentURL:"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView

                    android:id="@+id/attachmenturl"
                    android:text="Please Check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="180dp"
                    android:layout_marginTop="12dp"
                    android:textColor="#000000"
                    android:textSize="20dp" />

            </RelativeLayout>
            <RelativeLayout
android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/n"
                    android:layout_width="wrap_content"


                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:text="Country:"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/doctortype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="12dp"
                    android:text="jobname"
                    android:textColor="#000000"
                    android:textSize="15dp" />
            </RelativeLayout>
            <Button
                android:id="@+id/insert"
                android:layout_margin="10dp"
                android:background="@drawable/extra"
                android:text="Bid"
                android:layout_gravity="center_horizontal"
                android:layout_width="150dp"
                android:layout_height="40dp" />
       <TextView
           android:layout_width="wrap_content"
           android:text="Bids Placed"
           android:textColor="#000000"
           android:textStyle="bold"
           android:textSize="18dp"
           android:layout_gravity="center"
           android:layout_height="wrap_content" />
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/recycle"
            android:layout_below="@+id/aj"
            android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>



    </LinearLayout>
  </RelativeLayout>
<ImageView
    android:layout_width="match_parent"
    android:layout_height="40dp" />
        </LinearLayout>

    </ScrollView>


    <ProgressBar
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:id="@+id/progress"
        android:layout_height="wrap_content" />
</RelativeLayout>