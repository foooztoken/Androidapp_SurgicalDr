<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#Ffffff"
    > <ScrollView
    android:layout_below="@+id/s"

    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<ProgressBar
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:visibility="invisible"/>
    <RelativeLayout

        android:id="@+id/s"
        android:layout_width="match_parent"
        android:layout_height="190dp"

        >
        <ImageView
            android:layout_width="80dp"
            android:id="@+id/imagemain"
            android:layout_marginTop="15dp"
           android:layout_marginLeft="20dp"
            android:layout_height="80dp"
            android:background="@mipmap/s"/>
        <TextView
            android:layout_marginTop="15dp"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="false"
            android:layout_marginLeft="27dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imagemain"
            android:text="Bilal"
            android:id="@+id/namet"
            />
        <TextView
            android:layout_marginTop="5dp"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:textSize="15dp"

            android:layout_centerHorizontal="false"
            android:layout_marginLeft="27dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/namet"

            android:text="Cleared Payment:$100"
            android:id="@+id/balance"
            />
    </RelativeLayout>
    <ImageView
        android:layout_below="@+id/s"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

        <LinearLayout  android:layout_below="@+id/s"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:textSize="20dp"
                android:textColor="#000000"
                android:text="App"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_marginLeft="24dp"
                android:layout_marginTop="22dp"

                android:id="@+id/notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView

                    android:layout_width="wrap_content"
                    android:text="Notifications"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:layout_height="wrap_content" /></RelativeLayout>
            <RelativeLayout
                android:layout_marginLeft="24dp"
                android:layout_marginTop="22dp"

                android:id="@+id/changelanugage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView

                    android:layout_width="wrap_content"
                    android:text="Change Language"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:layout_height="wrap_content" /></RelativeLayout>
            <RelativeLayout
                android:layout_marginLeft="24dp"
                android:layout_marginTop="22dp"

                android:id="@+id/conversation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView

                    android:layout_width="wrap_content"
                    android:text="Conversation"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:layout_height="wrap_content" /></RelativeLayout>
            <RelativeLayout
                android:layout_marginLeft="24dp"
                android:layout_marginTop="22dp"

                android:id="@+id/closedorder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView

                    android:layout_width="wrap_content"
                    android:text="Closed Orders"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:layout_height="wrap_content" /></RelativeLayout>



            <TextView
                android:layout_width="wrap_content"
                android:textSize="20dp"
                android:textColor="#000000"
                android:text="Faqs"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_marginLeft="24dp"
                android:layout_marginTop="22dp"

                android:id="@+id/faq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView

                android:layout_width="wrap_content"
                android:text="Faq"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_height="wrap_content" /></RelativeLayout>
            <RelativeLayout
                android:layout_marginLeft="24dp"    android:layout_marginTop="22dp"

                android:id="@+id/contactus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView

                    android:layout_width="wrap_content"
                    android:text="Contact Us"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:layout_height="wrap_content" />


            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:textSize="20dp"
                android:textColor="#000000"
                android:text="About"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:layout_height="wrap_content" />




            <RelativeLayout
                android:layout_marginLeft="24dp"    android:layout_marginTop="22dp"

                android:id="@+id/about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView

                    android:layout_width="wrap_content"
                    android:text="About"
                    android:textSize="15dp"
                    android:textColor="#000000"

                    android:layout_height="wrap_content" />


            </RelativeLayout>
            <RelativeLayout
                android:layout_marginLeft="24dp"    android:layout_marginTop="22dp"

                android:id="@+id/signout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView

                    android:layout_width="wrap_content"
                    android:text="Signout"
                    android:textSize="15dp"
                    android:textColor="#000000"

                    android:layout_height="wrap_content" />


            </RelativeLayout>
        </LinearLayout></RelativeLayout>
</ScrollView>
</RelativeLayout>